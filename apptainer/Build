Bootstrap: docker
From: python:3.12-slim

%files
    *.whl /opt/

%post
    apt-get update && apt-get install -y --no-install-recommends \
            gcc g++ build-essential wget gnupg2 lsb-release \
            python3-dev libffi-dev libssl-dev \
        && mkdir -p /etc/apt/keyrings \
        && wget -qO /etc/apt/keyrings/irods-signing-key.asc https://packages.irods.org/irods-signing-key.asc \
        && echo "deb [arch=amd64 signed-by=/etc/apt/keyrings/irods-signing-key.asc] https://packages.irods.org/apt/ $(lsb_release -sc) main" | tee /etc/apt/sources.list.d/renci-irods.list \
        && apt-get update && apt-get install -y irods-icommands \
        && apt-get clean \
        && rm -rf /var/lib/apt/lists/* \
        && ls -l /opt/ \
        && pip install --upgrade pip \
        && pip install nbconvert ipython requests python-irodsclient mango-mdschema \
        && pip install /opt/*.whl \
        && apt-get purge -y gcc g++ build-essential python3-dev libffi-dev libssl-dev \
        && apt-get autoremove -y \
        && apt-get clean \
        && rm -rf /var/lib/apt/lists/* \
        && rm -rf /root/.cache/pip \
        && rm -rf /usr/share/doc /usr/share/man /usr/share/locale

%runscript
    exec /usr/local/bin/mus "$@"